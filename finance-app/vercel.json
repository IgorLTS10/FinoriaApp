{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "crons": [
    {
      "path": "/api/crypto/prices",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/stocks/prices/refresh",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/metaux/prices/refresh",
      "schedule": "0 2 * * 1"
    }
  ]
}